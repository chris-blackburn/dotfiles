" vimgrep git files given a pattern
function! _GitGrep(pattern)
    function! _filter(path)
        if isdirectory(a:path) || !filereadable(a:path)
            return 0
        endif

        return 1
    endfunction

    let l:files = filter(gitme#files(), "_filter('".gitme#root()."/'.v:val)")

    try
        exec "vimgrep /".a:pattern."/g ".join(l:files, " ")
    catch /.*/
        echo v:exception
    endtry
endfunction

command! -nargs=1 GitGrep call _GitGrep(<q-args>)
nnoremap <leader>vg :GitGrep 

" For autocompletion

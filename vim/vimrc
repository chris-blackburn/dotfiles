" Branch name in the status line
function! LightlineGitbranch()
    let l:branch = gitme#branch()
    if len(branch) != 0 && winwidth(0) > 80
        return ' ' . branch
    endif
    return ''
endfunction

" Configure lightline
let g:lightline = {
  \ 'colorscheme': 'seoul256',
  \ 'component_function': {
  \   'gitbranch': 'LightlineGitbranch'
  \ },
  \ 'component': {
  \   'readonly': '%{&readonly?"":""}'
  \ },
  \ 'active': {
  \   'left': [ [ 'mode', 'paste' ],
  \             [ 'gitbranch', 'readonly', 'filename', 'modified' ] ]
  \ },
  \ 'separator': { 'left': '', 'right': '' },
  \ 'subseparator': { 'left': '', 'right': '' },
  \ }

let g:promptline_theme = "lightline"
